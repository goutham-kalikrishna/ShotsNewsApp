<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.shorts.jgirish.snu_pro.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On-Going Modules"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                android:layout_margin="20dp"
                />

            <com.me.shots.Non_extendable_ListView
                android:id="@+id/list_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"

                />
            <TextView
                android:id="@+id/no_courses"
                android:textStyle="italic"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No course In progrgress"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domains"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                />
            <com.me.shots.Non_extendable_ListView
                android:id="@+id/dlist_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"

                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
