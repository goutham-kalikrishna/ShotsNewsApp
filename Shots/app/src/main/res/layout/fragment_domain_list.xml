<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.shots.Fragments.domain_list">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollMe"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/domain_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Management"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:textColor="#000000"
        android:layout_margin="20dp"
        />

    <com.me.shots.Non_extendable_ListView
        android:id="@+id/list_display_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"

        />
        <TextView
            android:id="@+id/no_courses"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Courses Available at this Moment"/>
    </LinearLayout>

    </ScrollView>
</FrameLayout>
